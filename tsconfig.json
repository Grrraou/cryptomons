{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["node", "vite/client", "vue3-toastify/global"],
    "moduleResolution": "Node", // Ensure this is set to Node
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "preserve",
    // bad
    "strict": false,
    "skipLibCheck": true,
    "noImplicitAny": false,
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue"]
}
